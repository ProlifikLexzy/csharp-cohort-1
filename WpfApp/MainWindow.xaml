<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox  Height="20" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Name="myTextBox"/>
        <Button Content="Go" Width="200" Height="20" Click="Button_Click" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ProgressBar Grid.Column="1" Grid.Row="1" Minimum="0" Maximum="100"
                     Name="pBar"/>
        <Image Grid.ColumnSpan="2" Name="photoViewer" Grid.Row="2"/>
    </Grid>
</Window>
